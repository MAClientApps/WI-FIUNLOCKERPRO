<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:drawable/list_selector_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/WifiimageView">

            <androidx.cardview.widget.CardView
                android:id="@+id/unlockkcardview11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#2D509D"
                android:elevation="5dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:padding="11dp"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/unlockkwifi_conect_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="@string/neel_wifi"
                        android:textColor="#00FFFE"
                        android:fontFamily="@font/sitkavf"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="@string/security_type_wpa2"
                        android:textColor="#00FFFE"
                        android:fontFamily="@font/sitkavf"
                        />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:cardBackgroundColor="#00FFFE"
                    android:layout_marginStart="25dp"
                    app:cardCornerRadius="5sp"
                    app:cardElevation="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="9dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="Active Connection"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/wifi"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginEnd="20dp"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ImageView
            android:id="@+id/WifiimageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/available_wifi"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>